<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/openStackDarkBlue"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/venue_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTING"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/venue_location_container"
            style="@style/AppTheme.IconedInformationBarContainer">
            <ImageView
                style="@style/AppTheme.IconedInformationBarImageView"
                android:src="@drawable/map"/>
            <TextView
                android:id="@+id/venue_location_textview"
                style="@style/AppTheme.IconedInformationBarTextView"
                android:text="Grand Prince International Convention Center &amp; Hotels"/>
            <ImageView
                android:id="@+id/venue_map_navigation_image"
                style="@style/AppTheme.MoreImageView" />

        </LinearLayout>
        <com.google.android.gms.maps.MapView
            android:id="@+id/venue_map"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/venue_maps_gallery"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone">

            <android.support.v4.view.ViewPager
                android:id="@+id/venue_maps_gallery_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/venue_maps_gallery_indicator"
                android:padding="5dip"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                app:fillColor="#000"
                app:pageColor="#AAA"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/venue_images_gallery"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone">

            <android.support.v4.view.ViewPager
                android:id="@+id/venue_images_gallery_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/venue_images_gallery_indicator"
                android:padding="5dip"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                app:fillColor="#000"
                app:pageColor="#AAA"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/openStackDarkBlue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/openStackLightBlue"
            android:elevation="4dp"
            android:padding="20dp">
            <TextView
                android:id="@+id/about_summit_name"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Austin"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/about_summit_date"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="April 25-29, 2016"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/about_version_text"
                android:textIsSelectable="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:text="Version 0.6"/>

            <TextView
                android:id="@+id/about_build_text"
                android:textIsSelectable="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:text="Build Number 1101"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/openStackDarkBlue"
            android:id="@+id/wifi_networks_container"
            android:elevation="4dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/about_wifi_networks_title"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/openStackLightGray"
                android:textStyle="bold"
                android:text="WiFi"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/about_wifi_networks_subtitle"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/openStackLightGray"
                android:text="Available Networks"
                android:layout_marginBottom="20dp"/>
            <com.linearlistview.LinearListView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/about_wifi_networks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:background="#eeeeee"
                android:divider="@color/openStackLightBlue"
                app:dividerThickness="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                style="@style/AppTheme.InformationBarContainerBorderBottom">
                <TextView
                    android:id="@+id/about_website_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/openStackLightBlue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/about_website_list_item_title"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                style="@style/AppTheme.InformationBarContainerBorderBottom">
                <TextView
                    android:id="@+id/about_conduct_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/openStackLightBlue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/about_code_of_conduct_list_item_title"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                style="@style/AppTheme.InformationBarContainerBorderBottom">
                <TextView
                    android:id="@+id/about_support_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/openStackLightBlue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/about_report_problem_list_item_title"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                style="@style/AppTheme.InformationBarContainerBorderBottom">
                <TextView
                    android:id="@+id/about_inquiries_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/openStackLightBlue"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/about_general_inquires_list_item_title"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:textIsSelectable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:text="@string/about_title"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/about_desc"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

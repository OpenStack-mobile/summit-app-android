<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Switch
        android:id="@+id/switch_enable_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/switch_enable_notifications_text"
        android:layout_alignRight="@+id/switch_enable_notifications_text"
        android:layout_alignEnd="@+id/switch_enable_notifications_text" />

    <TextView
        android:id="@+id/switch_enable_notifications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/switch_enable_notifications"
        android:layout_marginTop="22dp"
        android:text="@string/switch_enable_notifications_subtext"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
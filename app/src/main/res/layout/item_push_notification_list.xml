<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_push_notification_subject"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="this is a subject really really really really really really really really long"
            android:textSize="16dp"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_push_notification_received_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textAlignment="gravity"
            android:textColor="@android:color/holo_blue_dark"
            android:text="12:00 PM"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_push_notification_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sumlorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum lorep ip sum"
        android:textSize="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:maxLines="5"
        android:ellipsize="end"
        />
    />
</LinearLayout>
<resources>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- CAB overlays action bar -->
        <item name="windowActionModeOverlay">true</item>
        <!-- CAB Style -->
        <item name="actionModeStyle">@style/ActionModeStyle</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Drawer">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.MoreImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/more</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.EventBriteTicketAddedImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ic_check_circle_green</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.SlidingTabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.SubsectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.SubsectionHeaderFilter" parent="AppTheme.SubsectionHeader">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/openStackGray</item>
    </style>

    <style name="AppTheme.SubsectionHeader.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.SubsectionHeaderFilter.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.EmptyTextSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/no_results</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppTheme.SearchSectionLinks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.SearchSectionLink">
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/search_subsection_links</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.IconedInformationBarContainerNoBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.IconedInformationBarContainer" parent="AppTheme.IconedInformationBarContainerNoBorder">
        <item name="android:layout_height">66dp</item>
        <item name="android:background">@color/openStackLightGray</item>
    </style>

    <style name="AppTheme.InformationBarContainerBorderBottom" parent="AppTheme.IconedInformationBarContainerNoBorder">
        <item name="android:background">@drawable/bottom_bordered_control</item>
    </style>

    <style name="AppTheme.IconedInformationBarImageView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.IconedInformationBarTextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/info_bar_text_size</item>
    </style>

    <style name="AppTheme.IconedInformationBarTextViewNoMoreImage" parent="AppTheme.IconedInformationBarTextView">
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="AppTheme.SearchSubsectionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.SearchSubsectionBar.Button">
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/search_subsection_links</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.SponsorTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/openStackGray</item>
    </style>

    <style name="AppTheme.MemberProfileDetailFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>

    <style name="AppTheme.MemberProfileDetailFieldContainerIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.MemberProfileDetailFieldContainerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.StarRate">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@drawable/ic_star_border</item>
    </style>

    <style name="AppTheme.SmallStarRate" parent="AppTheme.StarRate">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="AppTheme.SmallStarRateNoPadding" parent="AppTheme.StarRate">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="AppTheme.BigStarRate" parent="AppTheme.StarRate">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="AppTheme.MediumStarRate" parent="AppTheme.StarRate">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="AppTheme.FilterSectionList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppTheme.InitialLoadActivity" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:minHeight">1dp</item>
    </style>

    <style name="counter" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/material_badge</item>
    </style>

    <style name="label" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/material_label</item>
    </style>

    <style name="button" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/material_button</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.summitDates" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.summitName" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.ButtonDarkBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/material_rounded_button_dark_blue</item>
    </style>

    <style name="AppTheme.SplashLoginButton" parent="AppTheme.ButtonDarkBlue">
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.ButtonLightBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/material_rounded_button_light_blue</item>
       <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.SplashGuestButton" parent="AppTheme.ButtonLightBlue">
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="AppTheme.NowButton">
        <item name="android:textColor">@drawable/material_now_button_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/material_now_button</item>
    </style>

    <style name="AppTheme.EventDetailSubSectionHeaderTitle">
        <item name="android:textColor">@color/openStackGray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/info_bar_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EventDetailSubSectionHeaderTitleContainer">
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.EventDetailTimeText" parent="AppTheme.IconedInformationBarTextView">
        <item name="android:textColor">@color/openStackGray</item>
    </style>

    <style name="AppTheme.EventDetailActionButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/material_button_event_detail_action</item>
        <item name="android:padding">@dimen/event_detail_action_btn_padding</item>
        <item name="android:layout_marginLeft">@dimen/event_detail_action_btn_layout_margin_left</item>
        <item name="android:textSize">@dimen/event_detail_action_btn_txt_size</item>
        <item name="android:minHeight">@dimen/event_detail_action_btn_height</item>
        <item name="android:maxHeight">@dimen/event_detail_action_btn_height</item>
        <item name="android:minWidth">@dimen/event_detail_action_btn_min_width</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.EventDetailActionButtonToggle" parent="AppTheme.EventDetailActionButton">
        <item name="android:background">@drawable/material_button_event_detail_action_toggle</item>
    </style>

    <style name="AppTheme.DownloadButton">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/openStackDarkBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AlertText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/openStackDarkGray</item>
    </style>

    <style name="AppTheme.WifiIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ic_wifi</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.LockIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ic_lock</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.EventDetailsTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/event_detail_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingRight">@dimen/event_detail_title_padding</item>
        <item name="android:paddingLeft">@dimen/event_detail_title_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.EventRateTitle" parent="AppTheme.EventDetailsTitle">
        <item name="android:paddingTop">@dimen/event_detail_title_padding</item>
        <item name="android:textColor">@color/openStackDarkGray</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.EventDetailsCategory">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/event_detail_category_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">@dimen/event_detail_category_padding</item>
        <item name="android:paddingLeft">@dimen/event_detail_category_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.EventRowDateTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/event_row_date_title_size</item>
        <item name="android:textColor">@color/openStackSecondText</item>
    </style>

    <style name="AppTheme.EventRowTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/event_row_title_size</item>
        <item name="android:textColor">@color/openStackDarkGray</item>
    </style>

    <style name="AppTheme.EventRowTrackTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/event_row_date_title_size</item>
        <item name="android:textColor">@color/openStackSecondText</item>
    </style>

    <style name="AppTheme.PersonNameTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/profile_name_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
